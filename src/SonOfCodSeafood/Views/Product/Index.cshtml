@model IEnumerable<SonOfCodSeafood.Models.Product>
@using System.Security.Claims
@using SonOfCodSeafood.Models

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Our products:</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add a new product", "Create")</p>
    <br />
    <div class="row">
        <ul>
            @foreach (var product in Model)
            {
                <li>
                    <div id="prod" class="col-md-4">
                        <div class="panel">
                            <div class="panel-body">
                                @if (product.Img.Length > 0)
                                {
                                    <img src="data:image/jpg;base64,@System.Convert.ToBase64String(product.Img)" , style="max-width: 100%;" />
                                }
                                <div class="panel-heading">
                                    <h2 class="panel-title">@Html.ActionLink(product.Name, "Details", new { id = product.ProductId })</h2>
                                </div>
                            </div>
                        </div>
                        <div id="ED">
                            @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }) | @Html.ActionLink("Delete", "Delete", new { id = product.ProductId })
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="row">
        <ul>
            @foreach (var product in Model)
            {
                <li>
                    <div id="prod" class="col-md-4">
                        <div class="panel">
                            <div class="panel-body">
                                @if (product.Img.Length > 0)
                                {
                                    <img src="data:image/jpg;base64,@System.Convert.ToBase64String(product.Img)" , style="max-width: 100%;" />
                                }
                                <div class="panel-heading">
                                    <h2 class="panel-title">@Html.ActionLink(product.Name, "Details", new { id = product.ProductId })</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
}
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
